{
  "name": "Dark Coordinates",
  "version": "1.0",
  "manifest_version": 3,
   "permissions": [
     "storage",
     "tabs"
  ], 
  "description": "Displays live mouse coordinates in a dark theme",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png",
    "500": "icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png"
    },
    "default_title": "Dark Coordinates",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
